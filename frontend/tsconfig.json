{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2018",
    "jsx": "react-jsx",
    "module": "esnext",
    "declaration": true,
    "sourceMap": true,
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "types": [
    "@types/node"
  ],
  "include": ["**/*.ts","**/*.tsx","./src/@types"],
  "exclude": [
    "node_modules/*"
  ]
}